ROFI_DIR="$HOME/.config/rofi"
ROFI_SCRIPTS_DIR="$ROFI_DIR/scripts"
UTILS=(
  "AppDrawer"
  "Bluetooth"
  "Bluetooth-bzmenu"
  "Brightness"
  "ColorShift"
  "ClipBoard"
  "Emojis"
  "PowerMenu"
  "Themer"
  "WifiMenu"
  "WifiMenu-iwmenu"
)

ROFI_UTILS_CMD=$(printf '%s\n' "${UTILS[@]}" | rofi -dmenu -i -p "Utilities")
if [ -n "$ROFI_UTILS_CMD" ]; then
  bash $ROFI_SCRIPTS_DIR/$ROFI_UTILS_CMD
else
  exit 1
fi
